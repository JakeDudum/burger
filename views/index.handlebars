<h1>BURGER TOWN</h1>

<h2>Burgers to be devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <h2>{{burger_name}}</h2>
        <button class="eat" id="{{id}}">DEVOUR!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers already devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <h2>{{burger_name}}</h2>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="food">Burger:</label>
        <input type="text" id="burger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>